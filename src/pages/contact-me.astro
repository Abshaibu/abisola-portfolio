---
import Layout from '../layouts/Layout.astro'
import contactMeImage from '../images/pngs/contact-me-img.png'
---

<Layout title="Abisola | Contact Me">
<main>
    <section class="container">
    <div class="img-wrapper">
        <img src={contactMeImage} alt="a woman in a white shirt smiling" />
    </div>
    <div class="form-wrapper">
        <h1>Get in touch</h1>
        <form action="">
            <div class="split">
                <div class="form-group">
                    <label for="fname">first name</label>
                    <input class="input-field" type="text" name="fname" placeholder="First Name" id="fname" />
                </div>
                <div class="form-group">
                    <label for="lname">last name</label>
                    <input class="input-field" type="text" name="lname" placeholder="Last Name" id="lname" />
                </div>
            </div>
            <div class="split">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input class="input-field" type="email" name="email" placeholder="Enter your email address" id="email" />
                </div>
                <div class="form-group">
                    <label for="phone">phone number</label>
                    <input class="input-field" type="text" name="phone" placeholder="Enter your phone number" id="phone" />
                </div>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="input-field" name="message" id="message" placeholder="Enter your message"></textarea>
            </div>
            <button type="submit">Submit</button>
            <button disabled class="submit-btn" type="submit">Submitted!</button>
        </form>
    </div>
</section>
</main>
</Layout>

<style>
    section {
        display: flex;
        min-height: 100vh;
    }

    section div:first-child, section div:nth-child(2) {
        flex-basis: 50%;
    }

    form.submitted button {
        display: none;
    }

    button.submit-btn {
        border-color: #676767;
        color: #3A3A3A;
        background-color: #fff;
        pointer-events: none;
        display: none;
    }

    button.submit-btn:hover {
        background-color: #fff;
        color: #3A3A3A;
        border-color: #676767;
    }

    form.submitted button.submit-btn {
        display: block;
    }

    div.form-wrapper {
        padding-left: 3rem;
        color: #404040;
        display: flex;
        gap: 2rem;
        justify-content: center;
        flex-direction: column;
    }

    h1 {
        font-family: 'EB Garamond', sans-serif;
        font-size: 2rem;
    }

    .container {
        max-width: 1365px;
        margin-right: auto;
        margin-left: 0;
    }

    form input, textarea {
        font-family: 'SF UI Display', sans-serif;
        font-weight: 600;
        display: block;
        font-size: 1rem;
        width: 100%;
        border: none;
        outline: none;
        padding: 0.3rem 0;
        border-bottom: 2px solid #2c2c2c;
        transition: all 0.25s ease-in-out;
    }

    form input:focus, textarea:focus {
        border-color: #CCBEA3;
    }

    textarea {
        height: max-content;
    }

    input::placeholder, textarea::placeholder {
        font-family: 'SF UI Display', sans-serif;
        font-weight: 500;
        color: #40404083;
    }

    section img {
        display: block;
    }

    label {
        font-family: 'SF UI Display', sans-serif;
        font-weight: 700;
        font-size: 1rem;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
        display: block;
    }

    div.split {
        margin-bottom: 1rem;
        display: flex;
        gap: 12%;
        
    }

    button {
        font-family: 'SF UI Display', sans-serif;
        font-weight: 700;
        font-size: 1rem;
        border-radius: 10px;
        margin-top: 3rem;
        width: 152px;
        padding: 0.8rem 0;
        border: 2px solid transparent;
        outline: none;
        background-color: #CCBEA3;
        color: #fff;
        transition: all 0.25s ease-in-out;
    }

    button:hover {
        background-color: #fff;
        color: #CCBEA3;
        border-color: #CCBEA3;
    }

    @media screen and (max-width: 1023px) {

        section {
            flex-direction: column;
        }
        .container {
            margin: 0;
            max-width: 100%;
            width: 100%;
            padding: 0 0 5rem;
        }

        h1 {
            margin-top: 3rem;
        }

        section div.form-wrapper {
            width: 90%;
            margin: 0 auto;
            padding: 0;
        }

        div.split {
            gap: 9%;
        }
    }

    @media screen and (max-width: 426px) {
        section div.split {
            flex-direction: column;
            margin-bottom: 0;
        }

        div.split div {
            margin-bottom: 1rem;
        }
        h1 {
            text-align: center;
        }

        input {
            margin: 0.5rem 0;
        }
    }

</style>